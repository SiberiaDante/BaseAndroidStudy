<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_hencoder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HenCoder练习"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_radar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="雷达图"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_wheel_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="转盘View"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_fold_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="折叠TextView"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Layout Test 1"
            android:textAllCaps="false" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>